{
	"name": "@vdegenne/rollup",
	"version": "0.1.7",
	"type": "module",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"build": "wireit"
	},
	"files": [
		"./lib"
	],
	"devDependencies": {
		"typescript": "^5.9.2",
		"wireit": "^0.14.12",
		"rollup": "^4.46.4"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
